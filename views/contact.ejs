<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>

      <a href="/contact/add" class="btn btn-success mt-2">Tambah Data Contact</a>

      <% if (msg.length !== 0) { %>
        <div class="alert alert-success mt-2" role="alert">
          <%= msg %>
        </div>
      <% } %>

      <table class="table table-bordered border-dark mt-3">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">No HP</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <% if (contacts.length < 1) { %>
            <tr>
              <td colspan="4">
                <div class="alert alert-danger fw-bold" role="alert">Data contact masih kosong.</div>
              </td>
            </tr>
          <% } %>
          <% contacts.forEach((contact, i) => { i++ %>
            <tr>
              <th scope="row"><%= i %></th>
              <td><%= contact.nama %></td>
              <td><%= contact.nohp %></td>
              <td>
                <a href="contact/<%= contact.nama %>" class="btn btn-primary badge rounded-pill"><i class="bi bi-info-circle"></i> Detail</a>
              </td>
            </tr>
            <% i++ %>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>