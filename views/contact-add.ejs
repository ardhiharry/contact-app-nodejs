<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Tambah Data Contact</h2>
      
      <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% errors.forEach(err => { %>
              <li><%= err.msg %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <form method="post" action="/contact">
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input type="text" class="form-control" name="nama" id="nama" autofocus required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" name="email" id="email" required>
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">No HP</label>
          <input type="text" class="form-control" name="nohp" id="nohp" required>
        </div>
        <button type="submit" class="btn btn-success">Tambah Data Contact</button>
      </form>
    </div>
  </div>
</div>