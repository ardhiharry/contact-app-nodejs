<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Edit Data Contact</h2>
      
      <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% errors.forEach(err => { %>
              <li><%= err.msg %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <form method="post" action="/contact?_method=PUT">
        <input type="hidden" name="_id" value="<%= contact._id %>">
        <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %>">
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input type="text" class="form-control" name="nama" id="nama" value="<%= contact.nama %>" autofocus required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" name="email" id="email" value="<%= contact.email %>" required>
        </div>
        <div class="mb-3">
          <label for="nohp" class="form-label">No HP</label>
          <input type="text" class="form-control" name="nohp" id="nohp" value="<%= contact.nohp %>" required>
        </div>
        <button type="submit" class="btn btn-success">Edit Data Contact</button>
      </form>
    </div>
  </div>
</div>